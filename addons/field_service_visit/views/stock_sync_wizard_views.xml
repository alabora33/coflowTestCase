<odoo>
    <record id="view_stock_sync_wizard_form" model="ir.ui.view">
        <field name="name">stock.sync.wizard.form</field>
        <field name="model">field.service.visit.stock.sync.wizard</field>
        <field name="arch" type="xml">
            <form string="Stock Sync Wizard">
                <footer>
                    <button name="action_sync" string="Sync Now" type="object" class="btn-primary"/>
                    <button string="Close" special="cancel"/>
                </footer>
                <field name="result_message" readonly="1"/>
            </form>
        </field>
    </record>

    <act_window id="action_stock_sync_wizard"
        name="Sync Stock from FastAPI"
        res_model="field.service.visit.stock.sync.wizard"
        view_mode="form"
        target="new"
        view_id="view_stock_sync_wizard_form"/>
</odoo>
