
<odoo>
	<!-- Gruplar -->

	<!-- Custom module category for Field Service -->
	<record id="module_category_field_service" model="ir.module.category">
		<field name="name">Field Service</field>
		<field name="sequence">20</field>
	</record>

	<record id="group_field_service_user" model="res.groups">
		<field name="name">Field Service User</field>
		<field name="category_id" ref="field_service_visit.module_category_field_service"/>
	</record>
	<record id="group_field_service_manager" model="res.groups">
		<field name="name">Field Service Manager</field>
		<field name="category_id" ref="field_service_visit.module_category_field_service"/>
		<field name="implied_ids" eval="[(4, ref('group_field_service_user'))]"/>
	</record>

	<!-- Record Rule: User sadece kendi kayıtlarını görebilir -->
	<record id="field_service_visit_user_rule" model="ir.rule">
		<field name="name">Field Service User: Own Visits</field>
		<field name="model_id" ref="model_field_service_visit"/>
		<field name="groups" eval="[(4, ref('field_service_visit.group_field_service_user'))]"/>
		<field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('create_uid', '=', user.id)]</field>
		<field name="perm_read" eval="1"/>
		<field name="perm_write" eval="1"/>
		<field name="perm_create" eval="1"/>
		<field name="perm_unlink" eval="0"/>
	</record>

	<!-- Record Rule: Manager tüm kayıtları görebilir -->
	<record id="field_service_visit_manager_rule" model="ir.rule">
		<field name="name">Field Service Manager: All Visits</field>
		<field name="model_id" ref="model_field_service_visit"/>
		<field name="groups" eval="[(4, ref('field_service_visit.group_field_service_manager'))]"/>
		<field name="domain_force">[(1,'=',1)]</field>
		<field name="perm_read" eval="1"/>
		<field name="perm_write" eval="1"/>
		<field name="perm_create" eval="1"/>
		<field name="perm_unlink" eval="1"/>
	</record>
</odoo>
